{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "DOM"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
